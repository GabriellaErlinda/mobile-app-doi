<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Doirag" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#2563EB</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Surface & background -->
        <item name="android:colorBackground">#F8FAFC</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#1E293B</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="RoundedFilterChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipStrokeWidth">0dp</item>

        <item name="chipBackgroundColor">@color/selector_chip_bg</item>

        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="chipIconTint">@color/selector_chip_text</item>
        <item name="closeIconTint">@color/selector_chip_text</item>

        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>

        <item name="checkedIconVisible">false</item>

        <item name="chipMinHeight">40dp</item>
    </style>

</resources>