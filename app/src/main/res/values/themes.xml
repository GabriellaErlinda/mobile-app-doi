<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Doirag" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#2563EB</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#DBE4FF</item>
        <item name="colorOnPrimaryContainer">#001C3B</item>

        <item name="colorSecondary">#0891B2</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#CFFAFE</item>
        <item name="colorOnSecondaryContainer">#001F24</item>

        <item name="colorTertiary">#059669</item>
        <item name="colorOnTertiary">#FFFFFF</item>
        <item name="colorTertiaryContainer">#D1FAE5</item>
        <item name="colorOnTertiaryContainer">#002114</item>

        <item name="android:colorBackground">#F8FAFC</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorSurfaceVariant">#E1E8ED</item>
        <item name="colorOnSurface">#1E293B</item>
        <item name="colorOnSurfaceVariant">#475569</item>

        <item name="colorOutline">#CBD5E1</item>
        <item name="colorOutlineVariant">#E2E8F0</item>

        <item name="colorError">#DC2626</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorErrorContainer">#FEE2E2</item>

        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="android:textColorPrimary">#1E293B</item>
        <item name="android:textColorSecondary">#64748B</item>
        <item name="android:colorControlHighlight">#1A2563EB</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Doirag.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Doirag.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">#2563EB</item>
        <item name="android:navigationBarColor">#2563EB</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="Theme.Doirag.AppBarOverlay" parent="ThemeOverlay.Material3.Light" />
    <style name="Theme.Doirag.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="TabTextStyle" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

</resources>